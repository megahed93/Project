<odoo>
    <data noupdate="1">
        <!-- قالب البريد الإلكتروني لتعيين المهمة -->
        <record id="email_template_task_assignment" model="mail.template">
            <field name="name">Task Assignment</field>
            <field name="model_id" ref="project_management.model_project_task"/>
            <field name="subject">New Task Assigned: ${object.name}</field>
            <field name="email_from">${object.user_ids and object.user_ids[0].company_id.email or ''}</field>
            <field name="email_to">${', '.join(user.email for user in object.user_ids)}</field>
            <field name="body_html"><![CDATA[
                <p>Hello,</p>
                <p>You have been assigned a new task:</p>
                <ul>
                    <li><strong>Task:</strong> ${object.name}</li>
                    <li><strong>Description:</strong> ${object.description}</li>
                    <li><strong>Due Date:</strong> ${object.due_date}</li>
                </ul>
                <p>Best regards,<br/>
                Your Project Management Team</p>
            ]]></field>
        </record>

        <!-- قالب البريد الإلكتروني للتعليق على المهمة -->
        <record id="email_template_task_comment" model="mail.template">
            <field name="name">Task Comment</field>
            <field name="model_id" ref="project_management.model_project_task"/>
            <field name="subject">New Comment on Task: ${object.name}</field>
            <field name="email_from">${object.user_ids and object.user_ids[0].company_id.email or ''}</field>
            <field name="email_to">${', '.join(user.email for user in object.user_ids)}</field>
            <field name="body_html"><![CDATA[
                <p>Hello,</p>
                <p>A new comment has been added to your task:</p>
                <ul>
                    <li><strong>Task:</strong> ${object.name}</li>
                    <li><strong>Comment:</strong> ${context.get('comment_body')}</li>
                </ul>
                <p>Best regards,<br/>
                Your Project Management Team</p>
            ]]></field>
        </record>
    </data>
</odoo>

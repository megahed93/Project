<odoo>
    <record id="view_task_history_tree" model="ir.ui.view">
        <field name="name">task.history.tree</field>
        <field name="model">project.task.history</field>
        <field name="arch" type="xml">
            <tree>
                <field name="note"/>
                <field name="created_at"/>
            </tree>
        </field>
    </record>

    <record id="view_task_history_form" model="ir.ui.view">
        <field name="name">task.history.form</field>
        <field name="model">project.task.history</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="task_id"/>
                        <field name="note"/>
                        <field name="created_at"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
